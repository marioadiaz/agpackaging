  <div class="container">
    <p style="color: green"><%= notice %></p>
    <div class="card-header d-flex justify-content-between">
      <div class="text-left">
        <h2 class="my-0 font-size:8vw">Datos de troquel</h2>
      </div>
      <div class="d-flex">
        <%= link_to 'Editar', edit_troquel_path(@troquel), class: "btn btn-primary mx-2" %>
        <%= form_with(model: @cargo, url: troquel_path(@troquel), method: :delete, local: true) do |form| %>
          <%= form.submit 'Eliminar', class: 'btn btn-danger', data: { confirm: '¿Estás seguro/a de eliminar el Cargo?' } %>
        <% end %>
      </div>
    </div>
    <%= render @troquel %>
    <div class="card-header d-flex justify-content-between">
      <%= link_to 'Atras', troquels_path, :class => "center-block btn btn-dark  w-100 mt-2"  %>
    </div>
  </div>